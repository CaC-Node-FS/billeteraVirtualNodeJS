    <main>

        <h5 id="text-bienvenida">Hola, <span>{{titular}}</span></h5>

        <div id="vista">

            <article id="info">

                <section id="cuenta_datos">
                    <p>CA $ {{cuenta}} </p>
                    <p>$<span id="saldo">{{saldo}}</span><i id="home-eye-icon" class="bi-eye bi-eye-slash"
                            onclick="verSaldo()"></i></p>
                    <p id="CBU">CBU: {{CBU}}</p><img src="/images/copy-icon.png"
                        id="home-copy-CBU" onclick="copiarCBU()"><p id="CBU-copiado">CBU copiado</p>
                </section>

                <section id="cuenta_tarjeta">
                    <figure>
                        <p><img src="/images/logo.png" id="logo_tarjeta"> <span
                                id="numero_tarjeta">{{tarjeta_numero}}</span></p>
                        <figcaption>Débito</figcaption>
                    </figure>
                    <p>Titular: {{titular}}</p>
                    <p>Fecha de vencimiento {{fecha_vencimiento}}</p>
                    <p>Cuenta asociada: {{cuenta}}</p>
                </section>

                <section id="cuenta_movimientos">

                    <div class="accordion" id="accordionPanel">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
                                    aria-controls="panelsStayOpen-collapseTwo">
                                    Historial de movimientos
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <form action="#" id="movHistoricos">
                                    <div id="desdeDate">
                                        <label for="desdeDate">Desde</label>
                                        <input type="date" min="2024-01-01" required>
                                    </div>
                                    <div id="hastaDate">    
                                        <label for="hastaDate">Hasta</label>
                                        <input type="date" min="2024-01-01" required>
                                    </div>                                    
                                    <input type="submit" id="buscarMovButton" value="BUSCAR">
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
                                    aria-controls="panelsStayOpen-collapseOne">
                                    Últimos movimientos
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                                <div class="accordion-body">
                                    <table>
                                        <thead>
                                            <tr>
                                                <th class="fecha">Fecha</th>
                                                <th class="tipo">Tipo</th>
                                                <th class="concepto">Concepto</th>
                                                <th class="importe">Importe</th>
                                            </tr>
                                        </thead>
                                        <tbody>                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </section>

            </article>

        </div>

