  <main id="main-transferencias">

    <div id="vista-transferencias">

      <article id="info-transferencias">

        <section id="transferencias-menu">

          <div class="accordion" id="accordionPanel">

            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="false"
                  aria-controls="panelsStayOpen-collapseOne">Destinatarios agendados</button>
              </h2>
              <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse">
                <div class="accordion-body">
                  <section id="transferencias-agenda">
                    <table id="transferencias-agenda-table">
                      <thead>
                        <tr>
                          <th>Titluar</th>
                          <th>CBU</th>
                          <th>ALIAS</th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each dataTransferenciasAgenda}}
                        <tr>
                          <td class="transferencias-agenda-activar">{{this.agendaTransferenciasTitular}}</td>
                          <td class="transferencias-agenda-activar">{{this.agendaTransferenciasCBU}}</td>
                          <td class="transferencias-agenda-activar">{{this.agendaTransferenciasAlias}}</td>
                          <td class="transferencias-agenda-eliminar text-end"><i class="bi bi-trash3"></i></td>        
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </section>
                </div>
              </div>
            </div>

            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
                  aria-controls="panelsStayOpen-collapseTwo">
                  Nueva transferencia
                </button>
              </h2>
              <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                <div class="accordion-body">
                  <section id="transferecias-nueva">
                    <div class="text-center">
                      <label for="transferencias-nueva-buscarCBU">Ingresar CBU</label>                     
                      <input type="text" pattern="[0-9]+" size="14"  minlength="14" maxlength="14" id="transferencias-nueva-buscarCBU" placeholder="CBU" name="CBU" required>
                      <button id="buscarCBU-button">BUSCAR</button>                     
                    </div>                    
                    <form id="transferencias-nueva-info" class="row g-3 text-start">
                      <div class="row">
                        <div class="col-md-4">
                          <label for="transferencias-nueva-titular" class="form-label">Titular</label>
                          <span><input type="text" class="form-control" id="transferencias-nueva-titular" name="titular" disabled required></span>
                        </div>
                        <div class="col-md-4">
                          <label for="transferencias-nueva-CBU" class="form-label">CBU</label>
                          <span><input type="text" class="form-control" id="transferencias-nueva-CBU" name="CBU" disabled required></span>
                        </div>
                        <div class="col-md-4">
                          <label for="transferencias-nueva-alias" class="form-label">ALIAS</label>
                          <span><input type="text" class="form-control" id="transferencias-nueva-alias" name="alias" disabled required></span>
                        </div>
                        <div class="col-md-4">
                          <label for="transferencias-nueva-monto" class="form-label">Monto</label>
                          <span><input type="text" inputmode="numeric" pattern="[0-9\s]" autocomplete="cc-number" class="form-control" id="transferencias-nueva-monto" name="monto" required></span>
                        </div>
                      </div>
                      <p class="text-center">
                        <button id="transferencias-transferir-button" type="button">TRANSFERIR</button>
                        <button id="transferencias-cancelar-button" type="button">CANCELAR</button>
                      </p>
                    </form>
                  </section>
                </div>
              </div>
            </div>

            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
                  aria-controls="panelsStayOpen-collapseThree">Historial de transferencias</button>
              </h2>
              <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                <div class="accordion-body">
                  <section id="transferencias-historial">
                    <table id="historialTransferencias-table">
                      <thead>
                        <tr>
                          <th>Fecha</th>
                          <th>Titular destino</th>
                          <th>CBU destino</th>
                          <th>Monto</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each dataTransferenciasHistorial}}
                        <tr>
                          <td>{{this.agendaTransferenciasHistorialFecha}}</td>
                          <td>{{this.agendaTransferenciasHistorialTitular}}</td>
                          <td>{{agendaTransferenciasHistorialCBU}}</td>
                          <td>{{agendaTransferenciasHistorialMonto}}</td>
                        </tr>
                        {{/each}}
                        
                      </tbody>
                    </table>
                  </section>
                </div>
              </div>
            </div>

          </div>

        </section>

      </article>

    </div>

